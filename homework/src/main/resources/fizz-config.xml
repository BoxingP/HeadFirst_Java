<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="amountValue" class="java.lang.Integer">
        <constructor-arg type="int" value="3"/>
    </bean>

    <bean id="containRule" class="com.boxing.rule.ContainRule">
        <constructor-arg type="java.lang.String[]" value="Fizz,Whizz,Buzz"/>
        <property name="next" ref="multipleRule"/>
    </bean>


    <bean id="multipleRule" class="com.boxing.rule.MultipleRule">
        <constructor-arg type="java.lang.String[]" value="Fizz,Buzz,Whizz"/>
        <property name="next" ref="lastRule"/>
    </bean>

    <bean id="lastRule" class="com.boxing.rule.LastRule">
    </bean>

</beans>
